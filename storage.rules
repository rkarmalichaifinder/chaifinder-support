rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Allow users to upload photos for their own reviews
    match /review-photos/{userId}/{photoId} {
      allow read: if request.auth != null; // Anyone authenticated can view photos
      allow write: if request.auth != null && request.auth.uid == userId; // Only owner can upload
    }
    
    // Allow users to upload profile photos
    match /profile-photos/{userId} {
      allow read: if request.auth != null; // Anyone authenticated can view profile photos
      allow write: if request.auth != null && request.auth.uid == userId; // Only owner can upload
    }
    
    // Default deny all other access
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
